<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/selected_dot"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectedlocation"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/BackImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open new ticket"
                        android:theme="@style/HeadertTitle"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/Update_Customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginRight="13dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Update"
                    android:textAllCaps="true"
                    android:textColor="@color/screen_bg_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/add_Activity"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="add"
                    android:textAllCaps="true"
                    android:textColor="@color/screen_bg_color"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"/>
            </RelativeLayout>

        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/selectedlocation"
            android:paddingTop="1dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/curve_box"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textAllCaps="true"
                        android:text="Post on your timeline"
                        android:textColor="@color/selected_dot"
                        android:textSize="17dp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="08:30 AM"
                            android:textColor="@color/btn3"
                            android:textSize="20dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/icon_calander"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_actions_calendar_green" />
                            <LinearLayout
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/Date"
                                    android:text="Jan 20, 2020"
                                    android:textSize="@dimen/textsize_ten"
                                    android:fontFamily="@font/ubuntu_medium"
                                    android:textColor="@color/selected_dot"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="1dp"
                                    android:layout_height="wrap_content">
                                </TextView>

                                <TextView
                                    android:id="@+id/txtDay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:fontFamily="@font/ubuntu_medium"
                                    android:text="Wednesday"
                                    android:textColor="@color/btn_bg_color_2"
                                    android:textSize="@dimen/textsize_ten"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent">

                        <Spinner
                            android:id="@+id/Sp_ActivityTimeline"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_spinner_bg_light"/>
                    </LinearLayout>
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_ActivityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/ic_rectangle_box_215"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="Title"
                    android:textSize="@dimen/edt_font_size"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/registerTextColor"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/ubuntu_medium"/>

                <EditText
                    android:id="@+id/edt_ActivityDesc"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_rectangle_box_22"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="top"
                    android:hint="Type here"
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/registerTextColor"
                    android:textSize="@dimen/edt_font_size"
                    tools:ignore="RtlCompat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="Add Photos"
                        android:textAllCaps="true"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/heading1_font_size">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="20"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llImage1"
                            android:layout_width="100dp"
                            android:layout_height="80dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="8dp"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:background="@drawable/img_box_camera"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/cust_image1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitXY"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:layout_alignParentRight="true"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/removeimg1"
                                        android:visibility="visible"
                                        android:adjustViewBounds="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:src="@drawable/close_btn" />
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llImage2"
                            android:layout_width="100dp"
                            android:visibility="gone"
                            android:layout_height="80dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="7dp"
                                android:background="@drawable/img_box_camera"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:background="@drawable/img_box_camera"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/cust_image2"
                                        android:scaleType="fitXY"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:layout_alignParentRight="true"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/removeimg2"
                                        android:visibility="visible"
                                        android:adjustViewBounds="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:src="@drawable/close_btn" />
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llImage3"
                            android:layout_width="100dp"
                            android:visibility="gone"
                            android:layout_height="80dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="7dp"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:background="@drawable/img_box_camera"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/cust_image3"
                                        android:scaleType="fitXY"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:layout_alignParentRight="true"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/removeimg3"
                                        android:visibility="visible"
                                        android:adjustViewBounds="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:src="@drawable/close_btn" />
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llImage4"
                            android:layout_width="100dp"
                            android:visibility="gone"
                            android:layout_height="80dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="7dp"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:background="@drawable/img_box_camera"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/cust_image4"
                                        android:scaleType="fitXY"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:layout_alignParentRight="true"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/removeimg4"
                                        android:visibility="visible"
                                        android:adjustViewBounds="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:src="@drawable/close_btn" />
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="15"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:text="Date &amp; Time"
                            android:checked="true"
                            android:layout_gravity="center"
                            android:buttonTint="@color/btn1"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:textSize="@dimen/edt_font_size"
                            android:layout_height="wrap_content">
                        </CheckBox>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:orientation="horizontal"
                            android:background="@drawable/ic_rectangle_light_215"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_calander"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:drawableRight="@drawable/ic_calender"
                                android:fontFamily="@font/ubuntu_light"
                                android:gravity="center"
                                android:hint="DD/MM/YYYY"
                                android:inputType="datetime"
                                android:textColor="@color/selected_dot"
                                android:textColorHint="@color/registerTextColor"
                                android:textSize="@dimen/txt_font_size"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="15"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:text="Send by Email"
                            android:checked="false"
                            android:layout_gravity="center"
                            android:buttonTint="@color/textColorHint"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:textSize="@dimen/edt_font_size"
                            android:layout_height="wrap_content">
                        </CheckBox>

                        <CheckBox
                            android:text="Send as Text/SMS"
                            android:checked="false"
                            android:layout_gravity="center"
                            android:buttonTint="@color/textColorHint"
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:textSize="@dimen/edt_font_size"
                            android:layout_height="wrap_content">
                        </CheckBox>

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="15"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:text="Call Back"
                            android:checked="false"
                            android:layout_gravity="center"
                            android:buttonTint="@color/textColorHint"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:textSize="@dimen/edt_font_size"
                            android:layout_height="wrap_content">
                        </CheckBox>

                        <CheckBox
                            android:text="Save &amp; Close"
                            android:checked="false"
                            android:layout_gravity="center"
                            android:buttonTint="@color/textColorHint"
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:textSize="@dimen/edt_font_size"
                            android:layout_height="wrap_content">

                        </CheckBox>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/footerButtonBC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:theme="@style/footertextview"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>