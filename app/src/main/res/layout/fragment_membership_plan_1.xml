                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textSize="12dp"
                                android:textColor="@color/TitleTextColor"
                                android:inputType="textMultiLine"
                                android:fontFamily="@font/ubuntu_light"
                                android:text="@string/membershipplandesc"/>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:background="#F2CEA8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@drawable/curve_box_for_silverplan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="20"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="8dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/silver_icon"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="17"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Silver Plan"
                                    android:fontFamily="@font/ubuntu_medium"
                                    android:textSize="@dimen/twenty_two"
                                    android:textColor="@color/TitleTextColor"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Start:"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:textSize="@dimen/txt_font_size"
                                        android:textColor="@color/selected_dot"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="01/01/2020"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:textSize="@dimen/txt_font_size"
                                        android:textColor="@color/selected_dot"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" I  "
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:textSize="@dimen/txt_font_size"
                                        android:textColor="@color/selected_dot"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="End Date:"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:textSize="@dimen/txt_font_size"
                                        android:textColor="@color/selected_dot"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" 31/12/2020"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:textSize="@dimen/txt_font_size"
                                        android:textColor="@color/selected_dot"/>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/screen_bg_color"
                            android:layout_height="1dp">
                        </View>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="33dp"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/TitleTextColor"
                                android:textSize="12dp"
                                android:inputType="textMultiLine"
                                android:fontFamily="@font/ubuntu_light"
                                android:text="@string/membershipplandesc"/>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:background="#C2C2C2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@drawable/curve_box_for_green_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="20"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="8dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/dollar_icon" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="17"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pay As You Go Plan"
                                    android:fontFamily="@font/ubuntu_medium"
                                    android:textSize="@dimen/twenty_two"
                                    android:textColor="@color/TitleTextColor"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Start:"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:textSize="@dimen/txt_font_size"
                                        android:textColor="@color/selected_dot"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="01/01/2020"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:textSize="@dimen/txt_font_size"
                                        android:textColor="@color/selected_dot"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" I  "
