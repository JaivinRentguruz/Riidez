<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selected_dot"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/llWelcomeNote"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/BackToLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/BackImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FORGOT password "
                        android:theme="@style/HeadertTitle"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginBottom="25dp"
                    android:layout_gravity="left"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="bottom"
                    android:text="Forgot Password"
                    android:textColor="@color/TitleTextColor"
                    android:textSize="20dp" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llWelcomeNote"
            android:orientation="vertical"
            android:background="@drawable/curve_box_white">


            <LinearLayout
                android:id="@+id/imagelayout"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_black_bg"
                    android:layout_width="95dp"
                    android:layout_height="95dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_flexxicar_app_logo_50" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/imagelayout"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:layout_marginTop="30dp"
                    android:gravity="left"
                    android:text="Email *"
                    android:textAllCaps="true"
                    android:textColor="@color/registerTextColor"
                    android:fontFamily="@font/ubuntu"
                    android:textSize="@dimen/txt_font_size" />

                <EditText
                    android:id="@+id/edt_forgetemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/ic_rectanglebox_215"
                    android:paddingTop="8dp"
                    android:layout_marginTop="7dp"
                    android:paddingBottom="15dp"
                    android:hint="Enter an Email"
                    android:singleLine="true"
                    android:textSize="@dimen/edt_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="gravity"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Password reset link sent to your registered email ID."
                    android:textColor="@color/registerTextColor"
                    android:fontFamily="@font/ubuntu"
                    android:textSize="@dimen/txt_font_size" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/footerButtonBC"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/lblVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="verify"
                android:theme="@style/footertextview"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>