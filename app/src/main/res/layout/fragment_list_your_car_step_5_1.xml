<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/selectedVehicle"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/back_to_Step_5"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingRight="12dp"
                                android:src="@drawable/ic_chevron_left" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="FILTER BY VEHICLE CLASS"
                                android:textColor="@color/TitleTextColor"
                                android:textSize="17dp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/mainLayout"
                        android:background="@drawable/curve_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="7dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="SELECT VEHICLE CLASS"
                                android:textColor="@color/selected_dot"
                                android:textSize="17dp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/textColorHint"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="35dp"
                    android:layout_width="65dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/curve_box_green"
                    android:layout_height="65dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="36dp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textColor="@color/TitleTextColor"
                        android:text="5">
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_below="@id/selectedVehicle"
            android:background="@color/screen_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="Equipment (Extra) Name"
                    android:textColor="@color/selected_dot"
                    android:textSize="@dimen/txt_font_size" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_rectangle_box_128"
                    android:fontFamily="@font/ubuntu_medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/registerTextColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="26dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu"
                            android:gravity="left"
                            android:text="UPLOAD IMAGE"
                            android:textAllCaps="true"
                            android:textColor="@color/selected_dot"
                            android:textSize="@dimen/txt_font_size" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:background="@drawable/ic_rectangle_box_56"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/pluse_img"
                                android:padding="14dp"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu"
                            android:gravity="left"
                            android:layout_marginLeft="5dp"
                            android:text="Description"
                            android:textColor="@color/selected_dot"
                            android:textSize="@dimen/txt_font_size" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:background="@drawable/ic_rectangle_box_56"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/pluse_img"
                                android:padding="14dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:text="Price / Day"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:text="Max Amount"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_rectangle_light_215"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:inputType="text"
                        android:padding="14dp"
                        android:textColor="@color/registerTextColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/edt_font_size" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_rectangle_light_215"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="14dp"
                        android:textColor="@color/registerTextColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/edt_font_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:text="Charge Per Day"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:text="Use Maximum"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <Switch
                            android:layout_width="wrap_content"
                            android:theme="@style/SwitchTheme"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_height="match_parent">

                        <Switch
                            android:layout_width="wrap_content"
                            android:theme="@style/SwitchTheme"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:text="Tax Applicable"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:text="Serial No"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_rectangle_light_215"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:inputType="text"
                        android:padding="14dp"
                        android:textColor="@color/registerTextColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/edt_font_size" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_rectangle_light_215"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="14dp"
                        android:textColor="@color/registerTextColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/edt_font_size" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/lblsave"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/footerButtonBC"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="14dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:fontFamily="@font/ubuntu_medium"
                android:textAllCaps="true"
                android:textColor="@color/TitleTextColor"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


