<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectedlocation"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backarrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/BackImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Select location"
                        android:theme="@style/HeadertTitle"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_DiscardSelectedLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISCARD"
                    android:theme="@style/textDiscard"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/selectedlocation"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/curve_box">

            <LinearLayout
                android:id="@+id/selectedlocationlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="PICK UP LOCATION"
                        android:textColor="@color/selected_dot"
                        android:textSize="17dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="12"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_black_location_pin"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="67"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_pickup_locName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu"
                            android:text="TORONTO TO AIRPORT"
                            android:textColor="@color/selected_dot"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/lbl_PickupAdd"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="street"
                                android:textColor="@color/footerButtonBC"
                                android:fontFamily="@font/ubuntu"
                                android:textSize="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lblchange_location"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="20"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/curved_box_bg"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu"
                            android:text="CHANGE"
                            android:textColor="@color/TitleTextColor"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/img_plus"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:gravity="center"
                        android:background="@drawable/ic_green_box12"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_plus_icon_small" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:layout_marginLeft="15dp"
                        android:text="RETURN AT DIFFERENT LOCATION"
                        android:textColor="@color/selected_dot"
                        android:textSize="12dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/different_location_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="12"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_black_location_pin"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="67"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_return_locName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu"
                            android:text="TORONTO TO AIRPORT"
                            android:textColor="@color/selected_dot"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/lbl_ReturnAdd"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="street"
                                android:textColor="@color/footerButtonBC"
                                android:fontFamily="@font/ubuntu"
                                android:textSize="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lbl_change"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="20"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/curved_box_bg"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu"
                            android:text="CHANGE"
                            android:textColor="@color/TitleTextColor"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/half_curve_green">

                            <TextView
                                android:padding="6dp"
                                android:layout_marginLeft="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="PICK UP"
                                android:textColor="@color/TitleTextColor"
                                android:textSize="@dimen/txt_font_size"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/half_curve_black">

                            <TextView
                                android:padding="6dp"
                                android:layout_marginLeft="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text="RETURN"
                                android:textColor="@color/TitleTextColor"
                                android:textSize="@dimen/txt_font_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/half_curve_lightgray">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:padding="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/IconStartDate"
                                    android:layout_marginRight="5dp"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/ic_calander_black_icon"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:padding="2dp"
                                    android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblstartdate"
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu_medium"
                                    android:text="SELECT DATE"
                                    android:layout_margin="3dp"
                                    android:textColor="@color/selected_dot"
                                    android:textSize="@dimen/edt_font_size"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="left"
                                        android:layout_gravity="center_vertical"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/pickup_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_margin="3dp"
                                            android:fontFamily="@font/ubuntu_medium"
                                            android:text="Select"
                                            android:textAllCaps="true"
                                            android:textColor="@color/selected_dot"
                                            android:textSize="@dimen/edt_font_size"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:background="@drawable/half_curve_lightgray2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:padding="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/ic_calander_black_icon"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:padding="2dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/lblenddate"
                                        android:layout_marginLeft="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:text="SELECT DATE"
                                        android:layout_margin="3dp"
                                        android:textColor="@color/selected_dot"
                                        android:textSize="@dimen/edt_font_size"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="left"
                                        android:layout_gravity="center_vertical"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/return_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_margin="3dp"
                                            android:fontFamily="@font/ubuntu_medium"
                                            android:text="Select"
                                            android:textAllCaps="true"
                                            android:textColor="@color/selected_dot"
                                            android:textSize="@dimen/edt_font_size"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>

                <LinearLayout
                    android:id="@+id/llLogin"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Driver details"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/selected_dot"
                        android:textSize="13dp"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                    android:weightSum="20"
                    android:layout_marginTop="10dp"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="11"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_Profile"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/user_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="12dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/Login_Layout"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/curved_box_bg"
                            android:layout_height="30dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:text="SIGN IN"
                                android:fontFamily="@font/ubuntu"
                                android:textSize="14dp"
                                android:textColor="@color/TitleTextColor"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/Register_Layout"
                            android:layout_width="match_parent"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/black_curve"
                            android:layout_height="30dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:text="REGISTER NOW"
                                android:fontFamily="@font/ubuntu"
                                android:textSize="14dp"
                                android:textColor="@color/TitleTextColor"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:id="@+id/addpromo_layout"
                    android:weightSum="12"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:background="@drawable/ic_green_box12"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_plus_icon_small"
                                android:adjustViewBounds="true"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_medium"
                            android:text="ADD PROMO CODE"
                            android:textColor="@color/selected_dot"
                            android:textSize="@dimen/txt_font_size"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <EditText
                        android:gravity="right"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_rectangle_light_215"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/lblcontinue1"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/footerButtonBC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtcontinue"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="14dp"
                android:textSize="20dp"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTINUE"
                android:textColor="@color/TitleTextColor"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/calender_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@drawable/successful_bg"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/TitleTextColor"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/date_select_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="15"
                    android:layout_margin="8dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_cancelCal"
                        android:textColor="@color/selected_dot"
                        android:text="Cancel"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textColor="@color/selected_dot"
                        android:text="Select Dates"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txt_done"
                        android:textColor="@color/selected_dot"
                        android:text="Done"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="right"
                        android:textSize="17dp"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>
                <LinearLayout
                    android:layout_below="@+id/date_select_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <com.archit.calendardaterangepicker.customviews.DateRangeCalendarView
                        android:id="@+id/cdrvCalendar"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        custom:calendar_tag="Test"
                        custom:disable_date_color="#ABABAB"
                        custom:editable="true"
                        custom:enable_time_selection="false"
                        custom:range_color="#BCD3A0"
                        custom:selected_date_circle_color="@color/footerButtonBC"
                        custom:title_color="@color/selected_dot"
                        custom:week_offset="0">
                    </com.archit.calendardaterangepicker.customviews.DateRangeCalendarView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_relative_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@drawable/successful_bg"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/TitleTextColor"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="16"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_pickuptime"
                        android:textColor="@color/footerButtonBC"
                        android:text="Select Pickup Time"
                        android:gravity="left"
                        android:textSize="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/pickup_cancel"
                        android:textColor="@color/footerButtonBC"
                        android:text="Cancel"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorHint"/>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <RelativeLayout
                        android:id="@+id/relative_layout_time"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">
                    </RelativeLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/time_relative_layout2"
