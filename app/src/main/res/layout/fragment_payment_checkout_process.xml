<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/editCreditCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backimg_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/BackImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Payment checkout"
                        android:theme="@style/HeadertTitle" />

                </LinearLayout>

                <TextView
                    android:id="@+id/editcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textDiscard"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Cards" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/creditcardbg"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCardNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/TitleTextColor"
                        android:textSize="26dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txt_CardName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="7"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textColor="@color/selected_dot"
                        android:textSize="23dp" />

                    <TextView
                        android:id="@+id/txt_ExpiryDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/TitleTextColor"
                        android:textSize="23dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="9dp"
            android:layout_below="@id/editCreditCard"
            android:layout_marginBottom="48dp"
            android:background="@drawable/curve_box">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginRight="9dp"
                        android:layout_marginLeft="9dp"
                        android:background="@drawable/curve_box_yellow"
                        android:layout_width="match_parent"
                        android:weightSum="10"
                        android:layout_height="58dp">
                        <TextView
                            android:id="@+id/lblAmountPayable"
                            android:layout_gravity="center"
                            android:layout_marginLeft="17dp"
                            android:fontFamily="@font/ubuntu_medium"
                            android:textColor="@color/TitleTextColor"
                            android:textSize="@dimen/heading1_font_size"
                            android:text="Amount\nPayable"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_weight="7"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtAmtPayable"
                                android:layout_gravity="center"
                                android:gravity="right"
                                android:textSize="36dp"
                                android:textColor="@color/TitleTextColor"
                                android:fontFamily="@font/ubuntu_medium"
                                android:text=""
                                android:layout_marginRight="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="5"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textV_VehicleTypeVName"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textSize="@dimen/edt_font_size"
                            android:fontFamily="@font/ubuntu_medium"
                            android:textColor="@color/footerButtonBC"
                            android:text=""
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textV_VehicleModelName"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/selected_dot"
                            android:textSize="@dimen/textsize_eighteen"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:background="#F2F3F4"
                    android:layout_marginTop="6dp"
                    android:layout_height="95dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:src="@drawable/ic_pickup_location_circle"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:background="@color/black"
                                android:layout_height="30dp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_return_location_circle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="Pickup"
                                        android:textSize="@dimen/heading1_font_size"
                                        android:textColor="@color/selected_dot"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:layout_height="wrap_content"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/textView_PickupLocation"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="7dp"
                                            android:fontFamily="@font/ubuntu"
                                            android:text=""
                                            android:textColor="@color/background"
                                            android:textSize="@dimen/txt_font_size"/>
                                        <TextView
                                            android:id="@+id/textView_PickupLocationDate"
                                            android:layout_width="wrap_content"
                                            android:text=""
                                            android:layout_marginRight="2dp"
                                            android:textSize="@dimen/txt_font_size"
                                            android:textColor="@color/textColorHint"
                                            android:fontFamily="@font/ubuntu_light"
                                            android:layout_height="wrap_content">
                                        </TextView>
                                        <TextView
                                            android:id="@+id/textView_PickupLocationTime"
                                            android:layout_width="wrap_content"
                                            android:text=""
                                            android:layout_marginLeft="3dp"
                                            android:textSize="@dimen/txt_font_size"
                                            android:textColor="@color/textColorHint"
                                            android:fontFamily="@font/ubuntu_light"
                                            android:layout_height="wrap_content">
                                        </TextView>

                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginTop="11dp"
                                    android:paddingBottom="4dp"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="Return"
                                        android:textSize="@dimen/heading1_font_size"
                                        android:textColor="@color/selected_dot"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:layout_height="wrap_content"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/textView_ReturnLocationName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="7dp"
                                            android:fontFamily="@font/ubuntu"
                                            android:textColor="@color/background"
                                            android:text=""
                                            android:textSize="@dimen/txt_font_size"/>
                                        <TextView
                                            android:id="@+id/textView_ReturnLocationDate"
                                            android:layout_width="wrap_content"
                                            android:text=""
                                            android:layout_marginRight="2dp"
                                            android:textSize="@dimen/txt_font_size"
                                            android:textColor="@color/textColorHint"
                                            android:fontFamily="@font/ubuntu_light"
                                            android:layout_height="wrap_content">
                                        </TextView>
                                        <TextView
                                            android:id="@+id/textView_ReturnLocationTime"
                                            android:layout_width="wrap_content"
                                            android:text=""
                                            android:textSize="@dimen/txt_font_size"
                                            android:textColor="@color/textColorHint"
                                            android:fontFamily="@font/ubuntu_light"
                                            android:layout_height="wrap_content">
                                        </TextView>

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="32"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:background="@color/screen_bg_color"
                                android:layout_margin="8dp"
                                android:layout_height="match_parent">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/carimage"
                                        android:adjustViewBounds="true"
                                        android:layout_margin="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Process now."
                        android:textSize="20dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="center"
                        android:textColor="@color/textColorHint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/lblmessage"
                        android:layout_marginTop="4dp"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textColor="@color/textColorHint"
                        android:fontFamily="@font/ubuntu_light"
                        android:text=" Once the payment is processed successfully,\n you will get your payment reference \n number. Payment confirmation email will \n been sent to neerajkaneria@me.com.\n Please call customer service for any errors."
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/lblprocess"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/footerButtonBC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtprocess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCESS"
                android:theme="@style/footertextview" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>