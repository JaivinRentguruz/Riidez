<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/vehicle_linearlayout"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/top_curve_light_gray"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_VehTypeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="75"
                android:textSize="@dimen/txt_font_size"
                android:padding="5dp"
                android:layout_gravity="left"
                android:textColor="@color/hintColor"
                android:fontFamily="@font/ubuntu_medium"
                android:text="Economy"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="25"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/ic_rectangle_box1_light_123"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="17dp">

                    <TextView
                        android:id="@+id/lbl_availableqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="8sp"
                        android:textAllCaps="true"
                        android:layout_margin="1dp"
                        android:textAlignment="gravity"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textColor="@color/TitleTextColor"/>
                    <TextView
                        android:layout_toRightOf="@+id/lbl_availableqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="8sp"
                        android:textAllCaps="true"
                        android:layout_margin="1dp"
                        android:textAlignment="gravity"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textColor="@color/TitleTextColor"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="60"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:background="@drawable/curve_box_white"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_vehName"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textColor="@color/selected_dot"
                        android:textSize="13dp"
                        android:text="Mitsubishi Mirage"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/lbl_vehName"
                        android:layout_width="wrap_content"
                        android:text="Or Similar"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/textcolor"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/car_imgview"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="30"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_marginLeft="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_gear_1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lbl_transmission_Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="7"
                        android:fontFamily="@font/ubuntu"
                        android:text=" "
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/textsize_ten" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_car_seat_img"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/lbl_seats"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:fontFamily="@font/ubuntu"
                            android:text=" "
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/textsize_ten" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ac_icon"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/lblfuel_Name"
                        android:layout_marginLeft="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:textSize="@dimen/textsize_ten"
                        android:textColor="@color/registerTextColor"
                        android:fontFamily="@font/ubuntu"
                        android:text=" "
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/doors_icon"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_doors"
                            android:layout_marginLeft="4dp"
                            android:textSize="@dimen/textsize_ten"
                            android:textColor="@color/registerTextColor"
                            android:fontFamily="@font/ubuntu"
                            android:text=" "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/bag_icon"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_bags"
                            android:layout_marginLeft="4dp"
                            android:textSize="@dimen/textsize_ten"
                            android:textColor="@color/registerTextColor"
                            android:fontFamily="@font/ubuntu"
                            android:text=" "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="35dp">

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:background="@drawable/green_bottom_curve"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Per day"
                    android:textAllCaps="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="9dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/TitleTextColor"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/lbl_perDayAmount"
                    android:layout_width="wrap_content"
                    android:text=" "
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/TitleTextColor"
                    android:textSize="18dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:background="@drawable/black_bottom_curve"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Deposit Amount"
                    android:textAllCaps="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="9dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/TitleTextColor"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_DepositeAmount"
                    android:layout_width="wrap_content"
                    android:text=" "
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/TitleTextColor"
                    android:textSize="18dp"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
