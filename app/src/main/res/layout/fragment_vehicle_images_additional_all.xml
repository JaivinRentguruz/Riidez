<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectedlocation"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/BackImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle images"
                        android:theme="@style/HeadertTitle"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/lblDiscard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="DISCARD"
                    android:textColor="@color/TitleTextColor"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selectedlocationlayout"
            android:layout_below="@id/selectedlocation"
            android:background="@drawable/curve_box"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="All Images"
                        android:textAllCaps="true"
                        android:textColor="@color/selected_dot"
                        android:textSize="17dp" />


                    <TextView
                        android:id="@+id/text_DateTime12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/ubuntu"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/selected_dot"
                        android:textSize="12dp" />

                </RelativeLayout>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/selectedlocationlayout"
                android:background="@drawable/curve_box"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">
                                <ImageView
                                    android:id="@+id/car_image_1"
                                    android:layout_width="match_parent"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_2"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">
                                <ImageView
                                    android:id="@+id/car_image_3"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_4"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_5"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_6"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_7"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_8"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_9"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:elevation="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            app:cardCornerRadius="7dp"
                            android:layout_height="105dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_10"
                                    android:scaleType="fitXY"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:weightSum="100"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_weight="55">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/radiobtn"
                                    android:layout_marginTop="10dp"
                                    android:text="Send Waiver Signature"
                                    android:fontFamily="@font/ubuntu"
                                    android:textColor="@color/selected_dot"
                                    android:textSize="14dp"
                                    android:buttonTint="@color/footerButtonBC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/backNext_additionalimg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_weight="45"
                            android:background="@drawable/curve_box_green">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/ubuntu"
                                android:gravity="center"
                                android:text="NEXT"
                                android:textAllCaps="true"
                                android:textColor="@color/TitleTextColor"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>