<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectlocation"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/BacktoBillPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:theme="@style/BackImage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Filter"
                    android:theme="@style/HeadertTitle"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lblclearfilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLEAR"
                android:theme="@style/textDiscard"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectlocation"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:background="@drawable/curve_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="Options available"
                        android:textAllCaps="true"
                        android:textColor="@color/selected_dot"
                        android:textSize="17dp" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorHint"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:weightSum="20"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:gravity="left"
                    android:text="Transaction Type"
                    android:textSize="@dimen/txt_font_size"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/selected_dot"/>

                <Spinner
                    android:id="@+id/Sp_transacType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="14"
                    android:background="@drawable/ic_spinner_bg_light"
                    android:gravity="left"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:weightSum="20"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:gravity="left"
                    android:text="Bill Status"
                    android:textSize="@dimen/txt_font_size"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/selected_dot"/>

                <Spinner
                    android:id="@+id/Sp_BillStatus"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="14"
                    android:background="@drawable/ic_spinner_bg_light"
                    android:dropDownSelector="@drawable/down_arrow"
                    android:gravity="left"/>

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:weightSum="20"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="left"
                android:text="Amount"
                android:textSize="@dimen/txt_font_size"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/selected_dot"/>

                <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
                    android:id="@+id/rangeSeekbar"
                    android:layout_width="0dp"
                    android:layout_weight="14"
                    android:layout_gravity="top"
                    app:absoluteMinValue="100000"
                    app:absoluteMaxValue="0"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="20"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblMinAmount"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:gravity="right"
                    android:text="$ 0"
                    android:textSize="@dimen/txt_font_size"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/footerButtonBC"/>

                <TextView
                    android:id="@+id/lblMaxAmount"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="12"
                    android:gravity="right"
                    android:text="$ 100,000"
                    android:textSize="@dimen/txt_font_size"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/footerButtonBC"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Filter Start Date"
                    android:textAllCaps="true"
                    android:textSize="@dimen/txt_font_size"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/selected_dot"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/selected_dot"
                    android:fontFamily="@font/ubuntu"
                    android:layout_marginLeft="17dp"
                    android:text="Filter End Date"
                    android:textAllCaps="true"
                    android:textSize="@dimen/txt_font_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_FilterStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_rectangle_light_215"
                    android:textSize="@dimen/edt_font_size"
                    android:drawableRight="@drawable/ic_calender"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Select Date.."
                    android:textColorHint="@color/textColorHint"
                    android:textColor="@color/registerTextColor"/>

                <TextView
                    android:id="@+id/txt_FilterEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_light_215"
                    android:drawableRight="@drawable/ic_calender"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Select Date.."
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/registerTextColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/edt_font_size" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/lblSubmit"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/footerButtonBC"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:theme="@style/footertextview"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>