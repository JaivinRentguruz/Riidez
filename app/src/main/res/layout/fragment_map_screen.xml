<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_marginBottom="61dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/edtSearchLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="88"
                android:singleLine="true"
                android:background="@drawable/ic_rectangle_forsearch"
                android:drawableLeft="@drawable/ic_location_pin"
                android:drawableRight="@drawable/ic_set_location"
                android:drawablePadding="8dp"
                android:fontFamily="@font/ubuntu_light"
                android:gravity="center_vertical"
                android:hint="Mississauga"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingRight="6dp"
                android:paddingBottom="3dp"
                android:textColor="@color/registerTextColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/edt_font_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:layout_marginRight="15dp">

                <RelativeLayout
                    android:id="@+id/media_mixer_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/round_image"
                    android:backgroundTint="@color/red">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_baseline_format_list_bulleted_24"
                        android:backgroundTint="@color/red"/>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_above="@id/lblcontinue1"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="100dp"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lblcontinue1"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:gravity="top"
            android:orientation="horizontal">

            <include layout="@layout/bottom_navigation"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>