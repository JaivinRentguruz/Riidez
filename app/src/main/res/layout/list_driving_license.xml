<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:background="@drawable/curve_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/ubuntu"
            android:textAllCaps="true"
            android:text="PRIMARY Driver"
            android:textColor="@color/selected_dot"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/lblView"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="14dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/ubuntu_bold"
            android:textAllCaps="true"
            android:gravity="right"
            android:text="View"
            android:textColor="@color/selected_dot"
            android:textSize="14dp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorHint"/>

    <LinearLayout
        android:id="@+id/View_DL_Details"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_drivingDoc"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:padding="7dp"
                    android:src="@drawable/driving_license_img"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/lblprimaryDriverName"
                        android:text="Josh Mansell"
                        android:textSize="14dp"
                        android:textColor="@color/selected_dot"
                        android:fontFamily="@font/ubuntu_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_DRelationship"
                            android:text=""
                            android:textSize="14dp"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_DTelephone"
                            android:text=""
                            android:textSize="14dp"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_DEmail"
                            android:text=""
                            android:textSize="14dp"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_DrivingLice"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:padding="7dp"
                    android:src="@drawable/driving_license_img"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Driving License Detail"
                        android:textSize="14dp"
                        android:textColor="@color/selected_dot"
                        android:fontFamily="@font/ubuntu_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_DLNumber"
                            android:text=""
                            android:textSize="14dp"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_DLExDate"
                            android:text=" "
                            android:textSize="14dp"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbl_DissueBy"
                            android:text=""
                            android:textSize="14dp"
                            android:textColor="@color/selected_dot"
                            android:fontFamily="@font/ubuntu_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>