<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selected_dot"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectedlocation"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/BackImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add wallet pass"
                        android:theme="@style/HeadertTitle"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="DISCARD"
                    android:theme="@style/textDiscard"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/selectedlocation"
            android:padding="8dp"
            android:background="@drawable/curve_box">

        <LinearLayout
            android:id="@+id/selectedlocationlayout"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_box"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:background="@drawable/curve_box_black_9dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_flexxicar_app_logo_50"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingTop="3dp"
                        android:layout_height="match_parent">
                    <TextView
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:text="Agreement No. 363636\n Type: Retail"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/heading1_font_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                    </LinearLayout>
                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperatorcolor"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Toronto"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="@dimen/edt_font_size"
                        android:layout_width="0dp"
                        android:textColor="@color/selected_dot"
                        android:layout_weight="5"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:text="Toronto"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="@dimen/edt_font_size"
                        android:textColor="@color/selected_dot"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="11"
                    android:layout_marginTop="2dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="12 SEP 2020"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="21dp"
                        android:layout_width="0dp"
                        android:textColor="#709A3E"
                        android:layout_weight="5"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/user_car_icon"
                        android:layout_height="match_parent">
                    </ImageView>
                    <TextView
                        android:text="14 SEP 2020"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="21dp"
                        android:textColor="#709A3E"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="14:30 pm"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="@dimen/heading1_font_size"
                        android:layout_width="0dp"
                        android:textColor="@color/selected_dot"
                        android:layout_weight="5"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:text="14:30 pm"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:fontFamily="@font/ubuntu"
                        android:textSize="@dimen/heading1_font_size"
                        android:textColor="@color/selected_dot"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/selected_dot"
                    android:textSize="@dimen/txt_seventeen"
                    android:text="Jeep Wrangler 201"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
                    <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu"
                        android:padding="3dp"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size"
                        android:text="SEDAN / LIC3030303 / VIN232123123123"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_seventeen"
                        android:text="Peter Mathews Morrison"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu"
                        android:padding="3dp"
                        android:textColor="@color/selected_dot"
                        android:textSize="@dimen/txt_font_size"
                        android:text="444 666 8888 / petermathews@gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/van_icon"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:gravity="left"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:gravity="center"
                            android:background="@drawable/curve_box_black_12dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_flexxicar_app_logo_50"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="5"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                        android:src="@drawable/scan_code_icon"
                        android:layout_width="wrap_content"
                            android:adjustViewBounds="true"
                        android:layout_height="wrap_content">
                    </ImageView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>