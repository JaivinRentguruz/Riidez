<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectedlocation"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/BackImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD BILLING INFO"
                        android:theme="@style/HeadertTitle"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/selectedlocation"
            android:background="@drawable/curve_box"
            android:layout_marginBottom="48dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout1"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="Billing details"
                    android:textAllCaps="true"
                    android:textColor="@color/selected_dot"
                    android:textSize="17dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/textColorHint"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="billing name"
                        android:fontFamily="@font/ubuntu_light"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size"
                        android:textAllCaps="true"/>

                    <EditText
                        android:id="@+id/BillingName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/ic_rectangle_box_215"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/edt_font_size"
                        android:inputType="text"
                        android:singleLine="true"
                        android:hint="Enter Billing Name"
                        android:textColorHint="@color/textColorHint"
                        android:textAlignment="textStart"
                        android:textColor="@color/registerTextColor"
                        android:fontFamily="@font/ubuntu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email id"
                        android:fontFamily="@font/ubuntu_light"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size"
                        android:textAllCaps="true"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/EmailId"
                        android:padding="5dp"
                        android:background="@drawable/ic_rectangle_box_215"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/edt_font_size"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:hint="Enter Email ID"
                        android:textColorHint="@color/textColorHint"
                        android:textAlignment="textStart"
                        android:textColor="@color/registerTextColor"
                        android:fontFamily="@font/ubuntu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="street no &amp; name"
                        android:fontFamily="@font/ubuntu_light"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size"
                        android:textAllCaps="true"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/StreetNo"
                        android:padding="5dp"
                        android:background="@drawable/ic_rectangle_box_215"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/edt_font_size"
                        android:singleLine="true"
                        android:inputType="text"
                        android:hint="Enter Street No &amp; Name"
                        android:textColorHint="@color/textColorHint"
                        android:textAlignment="textStart"
                        android:textColor="@color/registerTextColor"
                        android:fontFamily="@font/ubuntu"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/ubuntu_light"
                            android:gravity="left"
                            android:text="UNIT"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/txt_font_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/ubuntu_light"
                            android:gravity="left"
                            android:text="PIN / ZIP CODE"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/txt_font_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/UnitNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/ic_rectangle_light_215"
                            android:fontFamily="@font/ubuntu"
                            android:gravity="center_vertical"
                            android:hint="Enter Unit"
                            android:padding="5dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/registerTextColor"
                            android:textColorHint="@color/textColorHint"
                            android:textSize="@dimen/edt_font_size" />

                        <EditText
                            android:id="@+id/ZipCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_rectangle_light_215"
                            android:fontFamily="@font/ubuntu"
                            android:hint="Enter Code"
                            android:maxLength="10"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="5dp"
                            android:textColor="@color/registerTextColor"
                            android:textColorHint="@color/textColorHint"
                            android:textSize="@dimen/edt_font_size" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="City"
                        android:textAllCaps="true"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/thirteen" />

                    <EditText
                        android:id="@+id/City"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/ic_rectangle_box_215"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/edt_font_size"
                        android:singleLine="true"
                        android:inputType="text"
                        android:hint="Enter City"
                        android:textAlignment="textStart"
                        android:textColorHint="@color/textColorHint"
                        android:textColor="@color/registerTextColor"
                        android:fontFamily="@font/ubuntu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:fontFamily="@font/ubuntu_light"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size"
                        android:textAllCaps="true"
                        android:layout_marginTop="10dp"/>

                    <Spinner
                        android:id="@+id/sp_Countrylist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_spinner_bg_light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="STATE / PROVINCE *"
                        android:textAlignment="gravity"
                        android:fontFamily="@font/ubuntu_light"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size" />

                    <Spinner
                        android:id="@+id/Sp_Statelist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_spinner_bg_light"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_light"
                        android:gravity="left"
                        android:text="Claim number"
                        android:textAllCaps="true"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size" />

                    <EditText
                        android:id="@+id/ClaimNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_rectangle_box_215"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="center_vertical"
                        android:hint="Enter Claim Number"
                        android:padding="5dp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/registerTextColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/edt_font_size" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_light"
                        android:gravity="left"
                        android:text="claim date"
                        android:textAllCaps="true"
                        android:textColor="@color/registerTextColor"
                        android:textSize="@dimen/txt_font_size" />


                    <TextView
                        android:id="@+id/ClaimDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_rectangle_box_215"
                        android:fontFamily="@font/ubuntu"
                        android:hint="YYYY-MM-DD HH:MM"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/ic_calender"                            android:singleLine="true"
                        android:padding="5dp"
                        android:textColor="@color/registerTextColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/edt_font_size" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/footerButtonBC"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:theme="@style/footertextview"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>