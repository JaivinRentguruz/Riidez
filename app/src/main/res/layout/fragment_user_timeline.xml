<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/selectedlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_to_userprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/BackImage"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User timeline"
                    android:theme="@style/HeadertTitle" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="17"
            android:padding="2dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="MON"
                    android:textAllCaps="true"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/screen_bg_color"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:text="22"
                    android:textSize="12dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/screen_bg_color"
                    android:padding="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tue"
                    android:textAllCaps="true"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/screen_bg_color"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:text="23"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/screen_bg_color"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Wed"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/screen_bg_color"
                    android:textAllCaps="true"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:text="24"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/screen_bg_color"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@drawable/background_black"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="thu"
                    android:textAllCaps="true"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/screen_bg_color"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:text="25"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/screen_bg_color"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="fri"
                    android:textAllCaps="true"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/screen_bg_color"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:text="26"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/screen_bg_color"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="sat"
                    android:textAllCaps="true"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/screen_bg_color"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:text="27"
                    android:textSize="12dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/screen_bg_color"
                    android:padding="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="sun"
                    android:textSize="11dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/screen_bg_color"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:text="28"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/screen_bg_color"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/selectedlocation"
            android:orientation="horizontal"
            android:background="@drawable/curve_box_green"
            android:backgroundTint="@color/red"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/calanderviewlayout"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_height="70dp">
            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:id="@+id/calendar_View"
                app:textColorSelected="@color/TitleTextColor"
                android:background="@color/footerButtonBC"
                app:selectedDateBackground="@drawable/black_curve"/>
              </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_height="match_parent"
            android:layout_below="@id/selectedlocation"
            android:background="@drawable/curve_box">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <EditText
                    android:id="@+id/Edt_searchUsertimeline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="88"
                    android:gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="@drawable/ic_rectangle_forsearch"
                    android:textSize="@dimen/edt_font_size"
                    android:fontFamily="@font/ubuntu_light"
                    android:hint="Search"
                    android:singleLine="true"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_timeline_search_icon"
                    android:textColorHint="@color/textColorHint"
                    android:textColor="@color/registerTextColor"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:id="@+id/filter_IconForTimeline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_rectangle_greenbox"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/AddActivityimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:background="@drawable/ic_plus_icon" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@color/textColorHint"
                android:layout_height="1dp">
            </View>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/selectedlocation">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="100"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/rl_timeAndDate"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="20"
                                android:layout_height="match_parent">
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rl_color"
                                android:layout_width="0dp"
                                android:orientation="vertical"
                                android:layout_weight="6"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:visibility="gone"
                                    android:id="@+id/RlView"
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_marginRight="2.5dp"
                                    android:layout_height="match_parent">
                                    <View
                                        android:layout_width="0.8dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/selected_dot"/>
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rl_ActivityDesc"
                                android:layout_width="0dp"
                                android:layout_weight="74"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_ActivityTimeLine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                </RelativeLayout>


            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>